{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file ver",
            "command": "/usr/bin/clang++",
            "args": [
                "--std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "-lglfw",
                "-lvulkan",
                "-ldl",
                "-lpthread",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.app"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}